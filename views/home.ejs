    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;800&family=Fira+Code:wght@400;500&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --bg-white: #ffffff;
            --text-black: #000000;
            --accent-yellow: #FFD700;
            --card-gray: #f8f9fa;
        }

        body {
            background-color: var(--bg-white);
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--text-black);
            overflow-x: hidden;
            -webkit-font-smoothing: antialiased;
        }

        /* Brutalist Style Blob */
        .blob {
            position: absolute;
            width: 400px;
            height: 400px;
            background: var(--accent-yellow);
            filter: blur(140px);
            border-radius: 50%;
            z-index: -1;
            opacity: 0.15;
            top: -150px;
            right: -100px;
        }

        .navbar {
            background: var(--bg-white);
            border-bottom: 3px solid var(--text-black);
            padding: 1rem 0;
        }

        .hero {
            padding: clamp(120px, 15vh, 200px) 0 80px 0;
            background: linear-gradient(180deg, rgba(255, 215, 0, 0.1) 0%, var(--bg-white) 100%);
        }

        .hero-title {
            font-size: clamp(2.5rem, 8vw, 5rem);
            font-weight: 800;
            color: var(--text-black);
            letter-spacing: -3px;
            line-height: 1;
        }

        .stack-badge {
            background: var(--text-black);
            color: var(--accent-yellow);
            padding: 10px 20px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 800;
            margin: 5px;
            display: inline-flex;
            text-transform: uppercase;
        }

        /* Documentation Style Cards */
        .crud-card {
            background: var(--bg-white);
            border: 3px solid var(--text-black);
            padding: 35px;
            transition: all 0.3s ease;
            height: 100%;
            box-shadow: 10px 10px 0px var(--text-black);
        }

        .crud-card:hover {
            transform: translate(-5px, -5px);
            box-shadow: 15px 15px 0px var(--accent-yellow);
        }

        .method-tag {
            font-family: 'Fira Code', monospace;
            font-size: 0.8rem;
            padding: 6px 16px;
            border-radius: 4px;
            font-weight: 800;
            color: var(--text-black);
            border: 2px solid var(--text-black);
            margin-bottom: 15px;
            display: inline-block;
        }

        .get { background: #61afef; }
        .post { background: #98c379; }
        .patch { background: #e5c07b; }
        .delete { background: #e06c75; }

        code {
            font-family: 'Fira Code', monospace;
            background: #eee;
            padding: 8px 14px;
            border-radius: 4px;
            color: var(--text-black);
            font-size: 1rem;
            border: 1px solid #ccc;
            display: block;
            margin-top: 10px;
        }

        .btn-main {
            background: var(--text-black);
            color: var(--accent-yellow);
            font-weight: 800;
            padding: 18px 45px;
            border-radius: 8px;
            border: 3px solid var(--text-black);
            transition: 0.3s;
            text-decoration: none;
            display: inline-block;
            text-transform: uppercase;
        }

        .btn-main:hover {
            background: var(--accent-yellow);
            color: var(--text-black);
            transform: scale(1.05);
        }

        /* Backend Skills Section */
        .skill-item {
            border: 2px solid #000;
            padding: 15px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            font-weight: 700;
            background: #fff;
        }

        .skill-item i { font-size: 1.5rem; margin-right: 15px; color: var(--accent-yellow); -webkit-text-stroke: 1px #000; }

        footer {
            border-top: 3px solid var(--text-black);
            padding: 80px 0;
            background: #fafafa;
        }

        .social-link {
            color: var(--text-black);
            font-size: 2rem;
            transition: 0.3s;
        }

        .social-link:hover { color: var(--accent-yellow); transform: translateY(-5px); }

        @media (max-width: 576px) {
            .hero-btns { flex-direction: column; width: 100%; padding: 0 20px; }
            .btn-main { width: 100%; text-align: center; }
        }
    </style>
</head>
